{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string"
        },
        "script": {
            "type": "string"
        },
        "scriptParameters": {
            "type": "string",
            "defaultValue": " "
        }
    },
    "resources": [
        {
            "name": "[concat(parameters('resourceName'),'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.7",
                "autoUpgradeMinorVersion": true,
                "settings": {},
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', parameters('script'), ' ', parameters('scriptParameters'))]"
                }
            }
        }
    ],
    "outputs": {
        "message": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Compute/virtualMachines/', parameters('resourceName'), '/extensions/CustomScriptExtension')).instanceView.substatuses[0].message]"
        }
    }
}