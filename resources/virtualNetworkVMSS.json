{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "newEnv-vnet"
        },
        "virtualAddressSpace": {
            "type": "string",
            "defaultValue": "10.8.0.0/16",
            "metadata": {
                "description": "Make sure this range does not collide with existing ones in your subscription"
            }
        },
        "subnetNameForVMs": {
            "type": "string",
            "defaultValue": "newEnv-subnet"
        },
        "subnetAddressSpaceForVMs": {
            "type": "string",
            "defaultValue": "10.8.0.0/24",
            "metadata": {
                "description": "Make sure this range does not collide with existing ones in your subscription"
            }
        },
        "subnetNameForApplicationGateway": {
            "type": "string",
            "defaultValue": "newAppGateway-subnet"
        },
        "subnetAddressSpaceForApplicationGateway": {
            "type": "string",
            "defaultValue": "10.8.1.0/24",
            "metadata": {
                "description": "Make sure this range does not collide with existing ones in your subscription"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2017-10-01",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualAddressSpace')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetNameForVMs')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressSpaceForVMs')]"
                        }
                    },
                    {
                        "name": "[parameters('subnetNameForApplicationGateway')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressSpaceForApplicationGateway')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "virtualNetworkName": {
            "type": "string",
            "value": "[parameters('virtualNetworkName')]"
        }
    }
}