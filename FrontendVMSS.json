{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmssName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "instanceCount": {
            "type": "int",
            "defaultValue": 1
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "virtualNetworkResourceGroup": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkSubnetName": {
            "type": "string"
        },
        "applicationGatewayVirtualNetworkSubnetName": {
            "type": "string"
        },
        "databaseProvider": {
            "type": "string",
            "allowedValues": [
                "SQL",
                "SQLExpress",
                "AzureSQL"
            ]
        },
        "databaseServer": {
            "type": "string"
        },
        "databaseCatalog": {
            "type": "string",
            "defaultValue": "outsystems"
        },
        "databaseAuthenticationType": {
            "type": "string",
            "allowedValues": [
                "SQL",
                "Windows"
            ]
        },
        "databaseAdminUser": {
            "type": "string",
            "defaultValue": "sa"
        },
        "databaseAdminPass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseAdminUser": {
            "type": "string",
            "defaultValue": "OSADMIN"
        },
        "OutsystemsDatabaseAdminPass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseRuntimeUser": {
            "type": "string",
            "defaultValue": "OSRUNTIME"
        },
        "OutsystemsDatabaseRuntimePass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseLogUser": {
            "type": "string",
            "defaultValue": "OSLOG"
        },
        "OutsystemsDatabaseLogPass": {
            "type": "securestring"
        },
        "databaseSessionServer": {
            "type": "string"
        },
        "databaseSessionCatalog": {
            "type": "string",
            "defaultValue": "osSession"
        },
        "databaseSessionUser": {
            "type": "string",
            "defaultValue": "OSSTATE"
        },
        "databaseSessionPass": {
            "type": "securestring"
        },
        "outsystemsEnvironmentController": {
            "type": "string",
            "defaultValue": " "
        },
        "outsystemsEnvironmentPrivatekey": {
            "type": "string",
            "defaultValue": " "
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[concat(parameters('vmssName'), '.Outsystems.ApplicationGateway')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/applicationGateway.json"
                },
                "parameters": {
                    "applicationGatewayName": {
                        "value": "[concat(parameters('vmssName'), '-appgw')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('applicationGatewayVirtualNetworkSubnetName')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('vmssName'), '.Outsystems.VirtualMachineScaleSet')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/virtualMachineScaleSets.json"
                },
                "parameters": {
                    "vmssName": {
                        "value": "[parameters('vmssName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "virtualMachineSku": {
                        "value": "2016-Datacenter"
                    },
                    "instanceCount": {
                        "value": "[parameters('instanceCount')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "applicationGatewayBackendPoolId": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('vmssName'),'.Outsystems.ApplicationGateway')).outputs.applicationGatewayBackendId.value]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('vmssName'), '.Outsystems.FrontendVMSS')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/CommonTemplates/outsystemsFrontendVMSS.json"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('vmssName'),'.Outsystems.VirtualMachineScaleSet')).outputs.vmssName.value]"
                    },
                    "OSDBProvider": {
                        "value": "[parameters('databaseProvider')]"
                    },
                    "OSDBAuth": {
                        "value": "[parameters('databaseAuthenticationType')]"
                    },
                    "OSDBServer": {
                        "value": "[parameters('databaseServer')]"
                    },
                    "OSDBCatalog": {
                        "value": "[parameters('databaseCatalog')]"
                    },
                    "OSDBSAUser": {
                        "value": "[parameters('databaseAdminUser')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('databaseAdminPass')]"
                    },
                    "OSDBSessionServer": {
                        "value": "[parameters('databaseSessionServer')]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[parameters('databaseSessionCatalog')]"
                    },
                    "OSDBSessionUser": {
                        "value": "[parameters('databaseSessionUser')]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('databaseSessionPass')]"
                    },
                    "OSDBAdminUser": {
                        "value": "[parameters('OutsystemsDatabaseAdminUser')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('OutsystemsDatabaseAdminPass')]"
                    },
                    "OSDBRuntimeUser": {
                        "value": "[parameters('OutsystemsDatabaseRuntimeUser')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('OutsystemsDatabaseRuntimePass')]"
                    },
                    "OSDBLogUser": {
                        "value": "[parameters('OutsystemsDatabaseLogUser')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('OutsystemsDatabaseLogPass')]"
                    },
                    "OSController": {
                        "value": "[trim(parameters('outsystemsEnvironmentController'))]"
                    },
                    "OSPrivateKey": {
                        "value": "[trim(parameters('outsystemsEnvironmentPrivatekey'))]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}