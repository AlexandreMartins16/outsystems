{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "solutionIdentifier": {
            "type": "string",
            "maxLength": 6
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "devEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "testEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "prodEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "lifetimeEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.0.0/16"
        },
        "devSubnetName": {
            "type": "string",
            "defaultValue": "dev-subnet"
        },
        "devSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.0.0/24"
        },
        "testSubnetName": {
            "type": "string",
            "defaultValue": "test-subnet"
        },
        "testSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.1.0/24"
        },
        "prodSubnetName": {
            "type": "string",
            "defaultValue": "prod-subnet"
        },
        "prodSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.2.0/24"
        },
        "lifetimeSubnetName": {
            "type": "string",
            "defaultValue": "lifetime-subnet"
        },
        "lifetimeSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.3.0/24"
        },
        "appgwSubnetName": {
            "type": "string",
            "defaultValue": "appgw-subnet"
        },
        "appgwSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.4.0/24"
        }
    },
    "variables": {
        "outsystemsEnvironmentPrivatekey": "0Ew2B7J6od4DKlL+rt8G2Q=="
    },
    "resources": [
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.Network')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/virtualNetwork.json"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualAddressSpace": {
                        "value": "[parameters('virtualNetworkAddressSpace')]"
                    },
                    "devSubnetName": {
                        "value": "[parameters('devSubnetName')]"
                    },
                    "devSubnetAddressSpace": {
                        "value": "[parameters('devSubnetAddressSpace')]"
                    },
                    "testSubnetName": {
                        "value": "[parameters('testSubnetName')]"
                    },
                    "testSubnetAddressSpace": {
                        "value": "[parameters('testSubnetAddressSpace')]"
                    },
                    "prodSubnetName": {
                        "value": "[parameters('prodSubnetName')]"
                    },
                    "prodSubnetAddressSpace": {
                        "value": "[parameters('prodSubnetAddressSpace')]"
                    },
                    "lifetimeSubnetName": {
                        "value": "[parameters('lifetimeSubnetName')]"
                    },
                    "lifetimeSubnetAddressSpace": {
                        "value": "[parameters('lifetimeSubnetAddressSpace')]"
                    },
                    "appgwSubnetName": {
                        "value": "[parameters('appgwSubnetName')]"
                    },
                    "appgwSubnetAddressSpace": {
                        "value": "[parameters('appgwSubnetAddressSpace')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.DevEnvironment')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/ControllerAzSQL.json"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-dev-vm')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('devEnvironmentVmSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "virtualNetworkName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('solutionIdentifier'),'.Outsystems.Network')).outputs.virtualNetworkName.value]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('devSubnetName')]"
                    },
                    "sqlServerName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-dev-srv', substring(uniqueString(resourceGroup().id),0,4))]"
                    },
                    "databaseSKU": {
                        "value": "S3"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[concat(parameters('adminUsername'),'-sql')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "databasePlatform": {
                        "value": "concat(parameters('solutionIdentifier'),'-dev-db-outsystems')"
                    },
                    "databaseSession": {
                        "value": "concat(parameters('solutionIdentifier'),'-dev-db-session')"
                    },
                    "outsystemsEnvironmentPrivatekey": {
                        "value": "[variables('outsystemsEnvironmentPrivatekey')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.TestEnvironment')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/ControllerAzSQL.json"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-test-vm')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('testEnvironmentVmSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "virtualNetworkName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('solutionIdentifier'),'.Outsystems.Network')).outputs.virtualNetworkName.value]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('testSubnetName')]"
                    },
                    "sqlServerName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-test-srv', substring(uniqueString(resourceGroup().id),0,4))]"
                    },
                    "databaseSKU": {
                        "value": "S3"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[concat(parameters('adminUsername'),'-sql')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "databasePlatform": {
                        "value": "concat(parameters('solutionIdentifier'),'-test-db-outsystems')"
                    },
                    "databaseSession": {
                        "value": "concat(parameters('solutionIdentifier'),'-test-db-session')"
                    },
                    "outsystemsEnvironmentPrivatekey": {
                        "value": "[variables('outsystemsEnvironmentPrivatekey')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.LifetimeEnvironment')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/LifetimeAzSQL.json"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-life-vm')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('lifetimeEnvironmentVmSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "virtualNetworkName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('solutionIdentifier'),'.Outsystems.Network')).outputs.virtualNetworkName.value]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('lifetimeSubnetName')]"
                    },
                    "sqlServerName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-life-srv', substring(uniqueString(resourceGroup().id),0,4))]"
                    },
                    "databaseSKU": {
                        "value": "S3"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[concat(parameters('adminUsername'),'-sql')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "databasePlatform": {
                        "value": "concat(parameters('solutionIdentifier'),'-life-db-outsystems')"
                    },
                    "databaseSession": {
                        "value": "concat(parameters('solutionIdentifier'),'-life-db-session')"
                    }
                }
            }
        }
    ],
    "outputs": {}
}