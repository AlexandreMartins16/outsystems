{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "solutionIdentifier": {
            "type": "string",
            "maxLength": 6
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "devEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "testEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "prodEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "lifetimeEnvironmentVmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.0.0/16"
        },
        "devSubnetName": {
            "type": "string",
            "defaultValue": "dev-subnet"
        },
        "devSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.0.0/24"
        },
        "testSubnetName": {
            "type": "string",
            "defaultValue": "test-subnet"
        },
        "testSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.1.0/24"
        },
        "prodSubnetName": {
            "type": "string",
            "defaultValue": "prod-subnet"
        },
        "prodSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.2.0/24"
        },
        "lifetimeSubnetName": {
            "type": "string",
            "defaultValue": "lifetime-subnet"
        },
        "lifetimeSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.3.0/24"
        },
        "appgwSubnetName": {
            "type": "string",
            "defaultValue": "appgw-subnet"
        },
        "appgwSubnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.4.0/24"
        }
    },
    "variables": {
        "outsystemsEnvironmentPrivatekey": "0Ew2B7J6od4DKlL+rt8G2Q==",
        "databaseSKU": "S3"
    },
    "resources": [
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.Network')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/virtualNetwork.json"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualAddressSpace": {
                        "value": "[parameters('virtualNetworkAddressSpace')]"
                    },
                    "devSubnetName": {
                        "value": "[parameters('devSubnetName')]"
                    },
                    "devSubnetAddressSpace": {
                        "value": "[parameters('devSubnetAddressSpace')]"
                    },
                    "testSubnetName": {
                        "value": "[parameters('testSubnetName')]"
                    },
                    "testSubnetAddressSpace": {
                        "value": "[parameters('testSubnetAddressSpace')]"
                    },
                    "prodSubnetName": {
                        "value": "[parameters('prodSubnetName')]"
                    },
                    "prodSubnetAddressSpace": {
                        "value": "[parameters('prodSubnetAddressSpace')]"
                    },
                    "lifetimeSubnetName": {
                        "value": "[parameters('lifetimeSubnetName')]"
                    },
                    "lifetimeSubnetAddressSpace": {
                        "value": "[parameters('lifetimeSubnetAddressSpace')]"
                    },
                    "appgwSubnetName": {
                        "value": "[parameters('appgwSubnetName')]"
                    },
                    "appgwSubnetAddressSpace": {
                        "value": "[parameters('appgwSubnetAddressSpace')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.ProdEnvironment')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/ControllerAzSQL.json"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-prod-vm')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('prodEnvironmentVmSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "virtualNetworkName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('solutionIdentifier'),'.Outsystems.Network')).outputs.virtualNetworkName.value]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('prodSubnetName')]"
                    },
                    "sqlServerName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-prod-srv', substring(uniqueString(resourceGroup().id),0,4))]"
                    },
                    "databaseSKU": {
                        "value": "[variables('databaseSKU')]"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[concat(parameters('adminUsername'),'-sql')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "databasePlatform": {
                        "value": "[concat(parameters('solutionIdentifier'),'-prod-db-outsystems')]"
                    },
                    "databaseSession": {
                        "value": "[concat(parameters('solutionIdentifier'),'-prod-db-session')]"
                    },
                    "outsystemsEnvironmentPrivatekey": {
                        "value": "[variables('outsystemsEnvironmentPrivatekey')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.ProdEnvironmentFEVMSS')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/virtualMachineScaleSets.json"
                },
                "parameters": {
                    "vmssName": {
                        "value": "[concat(parameters('solutionIdentifier'),'-vmss')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('prodEnvironmentVmSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "virtualNetworkName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('solutionIdentifier'),'.Outsystems.Network')).outputs.virtualNetworkName.value]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('prodSubnetName')]"
                    },
                    "applicationGatewayvirtualNetworkSubnetName": {
                        "value": "[parameters('appgwSubnetName')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.ProdEnvironmentFE')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/CommonTemplates/outsystemsFrontendVMSS.json"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('solutionIdentifier'), '.Outsystems.ProdEnvironmentFEVMSS'))).outputs.vmssName.value]"
                    },
                    "OSDBProvider": {
                        "value": "AzureSQL"
                    },
                    "OSDBAuth": {
                        "value": "SQL"
                    },
                    "OSDBServer": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('solutionIdentifier'), '.Outsystems.ProdEnvironment'))).outputs.sqlServerNameFQDN.value]"
                    },
                    "OSDBCatalog": {
                        "value": "[concat(parameters('solutionIdentifier'),'-prod-db-outsystems')]"
                    },
                    "OSDBSAUser": {
                        "value": "[concat(parameters('adminUsername'),'-sql')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBSessionServer": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('solutionIdentifier'), '.Outsystems.ProdEnvironment'))).outputs.sqlServerNameFQDN.value]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[concat(parameters('solutionIdentifier'),'-prod-db-session')]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OSController": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',concat(parameters('solutionIdentifier'), '.Outsystems.ProdEnvironment'))).outputs.virtualMachineName.value]"
                    },
                    "OSPrivateKey": {
                        "value": "[variables('outsystemsEnvironmentPrivatekey')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('solutionIdentifier'), '.Outsystems.AzureSQLServer.FirewallRule')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/Resources/sqlServerFirewallRule.json"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('solutionIdentifier'),'.Outsystems.ProdEnvironment')).outputs.sqlServerName.value]"
                    },
                    "ruleName": {
                        "value": "AllowLBPublicIP"
                    },
                    "ipAddress": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/',parameters('solutionIdentifier'),'.Outsystems.ProdEnvironmentFEVMSS')).outputs.loadbalancerPIP.value]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}