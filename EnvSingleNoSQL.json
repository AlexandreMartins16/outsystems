{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "virtualNetworkResourceGroup": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkSubnetName": {
            "type": "string"
        },
        "databaseProvider": {
            "type": "string",
            "allowedValues": [
                "SQL",
                "SQLExpress",
                "AzureSQL"
            ]
        },
        "databaseServer": {
            "type": "string"
        },
        "databaseCatalog": {
            "type": "string",
            "defaultValue": "outsystems"
        },
        "databaseAuthenticationType": {
            "type": "string",
            "allowedValues": [
                "SQL",
                "Windows"
            ]
        },
        "databaseAdminUser": {
            "type": "string",
            "defaultValue": "sa"
        },
        "databaseAdminPass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseAdminUser": {
            "type": "string",
            "defaultValue": "OSADMIN"
        },
        "OutsystemsDatabaseAdminPass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseRuntimeUser": {
            "type": "string",
            "defaultValue": "OSRUNTIME"
        },
        "OutsystemsDatabaseRuntimePass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseLogUser": {
            "type": "string",
            "defaultValue": "OSLOG"
        },
        "OutsystemsDatabaseLogPass": {
            "type": "securestring"
        },
        "databaseSessionServer": {
            "type": "string"
        },
        "databaseSessionCatalog": {
            "type": "string",
            "defaultValue": "osSession"
        },
        "databaseSessionUser": {
            "type": "string",
            "defaultValue": "OSSTATE"
        },
        "databaseSessionPass": {
            "type": "securestring"
        },
        "outsystemsEnvironmentPrivatekey": {
            "type": "string"
        }
    },
    "variables": {
        "vnetId": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('virtualNetworkSubnetName'))]",
        "nicName": "[concat(parameters('virtualMachineName'), '-nic01')]",
        "nsgName": "[concat(parameters('virtualMachineName'), '-nsg')]",
        "pipName": "[concat(parameters('virtualMachineName'), '-pip')]"
    },
    "resources": [
        {
            "name": "[parameters('virtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                },
                "licenseType": "Windows_Server"
            }
        },
        {
            "name": "Microsoft.OutsystemsController",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/CommonTemplates/Outsystems.Controller.json"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "OSDBProvider": {
                        "value": "[parameters('databaseProvider')]"
                    },
                    "OSDBAuth": {
                        "value": "[parameters('databaseAuthenticationType')]"
                    },
                    "OSDBServer": {
                        "value": "[parameters('databaseServer')]"
                    },
                    "OSDBCatalog": {
                        "value": "[parameters('databaseCatalog')]"
                    },
                    "OSDBSAUser": {
                        "value": "[parameters('databaseAdminUser')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('databaseAdminPass')]"
                    },
                    "OSDBSessionServer": {
                        "value": "[parameters('databaseSessionServer')]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[parameters('databaseSessionCatalog')]"
                    },
                    "OSDBSessionUser": {
                        "value": "[parameters('databaseSessionUser')]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('databaseSessionPass')]"
                    },
                    "OSDBAdminUser": {
                        "value": "[parameters('OutsystemsDatabaseAdminUser')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('OutsystemsDatabaseAdminPass')]"
                    },
                    "OSDBRuntimeUser": {
                        "value": "[parameters('OutsystemsDatabaseRuntimeUser')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('OutsystemsDatabaseRuntimePass')]"
                    },
                    "OSDBLogUser": {
                        "value": "[parameters('OutsystemsDatabaseLogUser')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('OutsystemsDatabaseLogPass')]"
                    },
                    "OSPrivateKey": {
                        "value": "[parameters('outsystemsEnvironmentPrivatekey')]"
                    }
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
            ]
        },
        {
            "name": "[variables('nicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIpAddresses/', variables('pipName'))]",
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name,'Microsoft.Network/publicIpAddresses', variables('pipName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                }
            }
        },
        {
            "name": "[variables('pipName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2017-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "sku": {
                "name": "Basic"
            }
        },
        {
            "name": "[variables('nsgName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-01-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "RDP",
                        "properties": {
                            "priority": 300,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceApplicationSecurityGroups": [],
                            "destinationApplicationSecurityGroups": [],
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "3389"
                        }
                    },
                    {
                        "name": "HTTP",
                        "properties": {
                            "priority": 310,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceApplicationSecurityGroups": [],
                            "destinationApplicationSecurityGroups": [],
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "80"
                        }
                    },
                    {
                        "name": "HTTPS",
                        "properties": {
                            "priority": 320,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceApplicationSecurityGroups": [],
                            "destinationApplicationSecurityGroups": [],
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "443"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}