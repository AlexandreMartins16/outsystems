{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmssName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "instanceCount": {
            "type": "int",
            "defaultValue": 1
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "virtualNetworkResourceGroup": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkSubnetName": {
            "type": "string"
        },
        "applicationGatewaySubnetName": {
            "type": "string"
        },
        "databaseProvider": {
            "type": "string",
            "allowedValues": [
                "SQL",
                "SQLExpress",
                "AzureSQL"
            ]
        },
        "databaseServer": {
            "type": "string"
        },
        "databaseCatalog": {
            "type": "string",
            "defaultValue": "outsystems"
        },
        "databaseAuthenticationType": {
            "type": "string",
            "allowedValues": [
                "SQL",
                "Windows"
            ]
        },
        "databaseAdminUser": {
            "type": "string",
            "defaultValue": "sa"
        },
        "databaseAdminPass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseAdminUser": {
            "type": "string",
            "defaultValue": "OSADMIN"
        },
        "OutsystemsDatabaseAdminPass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseRuntimeUser": {
            "type": "string",
            "defaultValue": "OSRUNTIME"
        },
        "OutsystemsDatabaseRuntimePass": {
            "type": "securestring"
        },
        "OutsystemsDatabaseLogUser": {
            "type": "string",
            "defaultValue": "OSLOG"
        },
        "OutsystemsDatabaseLogPass": {
            "type": "securestring"
        },
        "databaseSessionServer": {
            "type": "string"
        },
        "databaseSessionCatalog": {
            "type": "string",
            "defaultValue": "osSession"
        },
        "databaseSessionUser": {
            "type": "string",
            "defaultValue": "OSSTATE"
        },
        "databaseSessionPass": {
            "type": "securestring"
        },
        "outsystemsEnvironmentController": {
            "type": "string"
        },
        "outsystemsEnvironmentPrivatekey": {
            "type": "string"
        }      
    },
    "variables": {
        "namingInfix": "[toLower(substring(concat(parameters('vmssName'), uniqueString(resourceGroup().id)), 0, 9))]",
        "vnetId": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "appgwsubnetId": "[concat(variables('vnetId'), '/subnets/', parameters('applicationGatewaySubnetName'))]",
        "appgwName": "[concat(parameters('vmssName'), '-appgw')]",
        "appgwId": "[resourceId('Microsoft.Network/applicationGateways',variables('appgwName'))]",
        "appgwpipName": "[concat(parameters('vmssName'), '-pip')]",
        "appgwpipId": "[resourceId('Microsoft.Network/publicIPAddresses',variables('appgwpipName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('appgwpipName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-03-30",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "sku": {
                    "name": "Basic"
                }
            }
        },
        {
            "type": "Microsoft.Network/applicationGateways",
            "name": "[variables('appgwName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2017-06-01",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('appgwpipName'))]"
            ],
            "properties": {
                "sku": {
                    "name": "Standard_Medium",
                    "tier": "Standard",
                    "capacity": 2
                },
                "gatewayIPConfigurations": [
                    {
                        "name": "appGatewayIpConfig",
                        "properties": {
                            "subnet": {
                                "id": "[variables('appgwsubnetId')]"
                            }
                        }
                    }
                ],
                "frontendIPConfigurations": [
                    {
                        "name": "appGatewayFrontendIP",
                        "properties": {
                            "PublicIPAddress": {
                            "id": "[variables('appgwpipId')]"
                            }
                        }
                    }
                ],
                "frontendPorts": [
                    {
                        "name": "appGatewayFrontendPort",
                        "properties": {
                            "Port": 80
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "appGatewayBackendPool"
                    }
                ],
                "backendHttpSettingsCollection": [
                    {
                        "name": "appGatewayBackendHttpSettings",
                        "properties": {
                            "Port": 80,
                            "Protocol": "Http",
                            "CookieBasedAffinity": "Disabled"
                        }
                    }
                ],
                "httpListeners": [
                    {
                        "name": "appGatewayHttpListener",
                        "properties": {
                            "FrontendIPConfiguration": {
                                "Id": "[concat(variables('appgwId'), '/frontendIPConfigurations/appGatewayFrontendIP')]"
                            },
                            "FrontendPort": {
                                "Id": "[concat(variables('appgwId'), '/frontendPorts/appGatewayFrontendPort')]"
                            },
                            "Protocol": "Http",
                            "SslCertificate": null
                        }
                    }
                ],
                "requestRoutingRules": [
                    {
                        "Name": "rule1",
                        "properties": {
                            "RuleType": "Basic",
                            "httpListener": {
                                "id": "[concat(variables('appgwId'), '/httpListeners/appGatewayHttpListener')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(variables('appgwId'), '/backendAddressPools/appGatewayBackendPool')]"
                            },
                            "backendHttpSettings": {
                                "id": "[concat(variables('appgwId'), '/backendHttpSettingsCollection/appGatewayBackendHttpSettings')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "name": "[parameters('vmssName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2017-03-30",
            "dependsOn": [
                "[concat('Microsoft.Network/applicationGateways/', variables('appgwName'))]"
            ],
            "sku": {
                "name": "[parameters('virtualMachineSize')]",
                "tier": "Standard",
                "capacity": "[parameters('instanceCount')]"
            },
            "properties": {
                "overprovision": true,
                "singlePlacementGroup": false,
                "upgradePolicy": {
                    "mode": "Automatic"
                },
                "virtualMachineProfile": {
                    "storageProfile": {
                        "osDisk": {
                            "caching": "ReadWrite",
                            "createOption": "FromImage"
                        },
                        "dataDisks": [],
                        "imageReference": {
                            "publisher": "MicrosoftWindowsServer",
                            "offer": "WindowsServer",
                            "sku": "2016-Datacenter",
                            "version": "latest"
                        }
                    },
                    "osProfile": {
                        "computerNamePrefix": "[concat(parameters('vmssName'),'node')]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]"
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "[concat(parameters('vmssName'),'netconfig')]",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "[concat(parameters('vmssName'),'ipconfig')]",
                                            "properties": {
                                                "subnet": {
                                                    "id": "[concat('/subscriptions/', subscription().subscriptionId,'/resourceGroups/', parameters('virtualNetworkResourceGroup'), '/providers/Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'), '/subnets/', parameters('virtualNetworkSubnetName'))]"
                                                },
                                                "publicIPAddressconfiguration": {
                                                    "name": "publicip",
                                                    "properties": {
                                                        "idleTimeoutInMinutes": 10
                                                    }
                                                },
                                                "ApplicationGatewayBackendAddressPools": [
                                                    {
                                                        "id": "[concat('/subscriptions/', subscription().subscriptionId,'/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/applicationGateways/', variables('appGwName'), '/backendAddressPools/appGatewayBackendPool')]"
                                                    }
                                                ]
                                            }   
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "Microsoft.OutsystemsFrontend",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pintonunes/Outsystems-AzureARMTemplates/master/CommonTemplates/Outsystems.Frontend.json"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[parameters('vmssName')]"
                    },
                    "OSController": {
                        "value": "[parameters('outsystemsEnvironmentController')]"
                    },
                    "OSPrivateKey": {
                        "value": "[parameters('outsystemsEnvironmentPrivatekey')]"
                    },
                    "OSDBProvider": {
                        "value": "[parameters('databaseProvider')]"
                    },
                    "OSDBAuth": {
                        "value": "[parameters('databaseAuthenticationType')]"
                    },
                    "OSDBServer": {
                        "value": "[parameters('databaseServer')]"
                    },
                    "OSDBCatalog": {
                        "value": "[parameters('databaseCatalog')]"
                    },
                    "OSDBSAUser": {
                        "value": "[parameters('databaseAdminUser')]"
                    },
                    "OSDBSAPass": {
                        "value": "[parameters('databaseAdminPass')]"
                    },
                    "OSDBSessionServer": {
                        "value": "[parameters('databaseSessionServer')]"
                    },
                    "OSDBSessionCatalog": {
                        "value": "[parameters('databaseSessionCatalog')]"
                    },
                    "OSDBSessionUser": {
                        "value": "[parameters('databaseSessionUser')]"
                    },
                    "OSDBSessionPass": {
                        "value": "[parameters('databaseSessionPass')]"
                    },
                    "OSDBAdminUser": {
                        "value": "[parameters('OutsystemsDatabaseAdminUser')]"
                    },
                    "OSDBAdminPass": {
                        "value": "[parameters('OutsystemsDatabaseAdminPass')]"
                    },
                    "OSDBRuntimeUser": {
                        "value": "[parameters('OutsystemsDatabaseRuntimeUser')]"
                    },
                    "OSDBRuntimePass": {
                        "value": "[parameters('OutsystemsDatabaseRuntimePass')]"
                    },
                    "OSDBLogUser": {
                        "value": "[parameters('OutsystemsDatabaseLogUser')]"
                    },
                    "OSDBLogPass": {
                        "value": "[parameters('OutsystemsDatabaseLogPass')]"
                    }
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachineScaleSets/', parameters('vmssName'))]"
            ]
        }
    ]
}