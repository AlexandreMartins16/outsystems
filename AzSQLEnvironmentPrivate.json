{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "controllerVirtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Name of the deployment controller virtual machine."
            }
        },
        "frontendVirtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Name of the frontend virtual machine."
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the deployment controller virtual machine."
            },
            "defaultValue": "Standard_F4s_v2"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin username of all Windows VMs."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin password of all Windows VMs."
            }
        },
        "virtualNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "The Resource Group where the existing virtual network (VNET) is located."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of the existing virtual network (VNET)."
            }
        },
        "virtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The subnet where you want to deploy the deployment controller virtual machine."
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "The Azure SQL Server name. CAUTION: This name must be unique within the Azure region. The deployment will fail if the name already exists."
            }
        },
        "databaseSKU": {
            "type": "string",
            "defaultValue": "S3",
            "metadata": {
                "description": "The size of the Azure SQL databases."
            }
        },
        "databaseAdministratorLogin": {
            "type": "string",
            "metadata": {
                "description": "The Azure SQL administrator login. CAUTION: This login cannot be identical to the login of the deployment controller virtual machine."
            }
        },
        "databaseAdministratorPass": {
            "type": "securestring",
            "metadata": {
                "description": "The Azure SQL administrator login password."
            }
        },
        "databasePlatform": {
            "type": "string",
            "defaultValue": "outsystems",
            "metadata": {
                "description": "The OutSystems platform database name."
            }
        },
        "databaseSession": {
            "type": "string",
            "defaultValue": "osSession",
            "metadata": {
                "description": "The OutSystems session database name. If not specified, defaults to the database platform."
            }
        },
        "databaseLog": {
            "type": "string",
            "defaultValue": "osLog",
            "metadata": {
                "description": "The OutSystems log database name. If not specified, defaults to the database platform. This is only appliable to OutSystems 11. Leave this setting empty when deploying OutSystems 10."
            }
        },
        "outsystemsEnvironmentPurpose": {
            "type": "string",
            "allowedValues": [
                "Development",
                "Lifetime"
            ],
            "defaultValue": "Development",
            "metadata": {
                "description": "The OutSystems environment purpose."
            }
        }
    },
    "variables": {
        "logCatalogDepName": "[if(empty(trim(parameters('databaseLog'))), '.AzureSQLDatabase.Platform', '.AzureSQLDatabase.Log')]",
        "sessionCatalogDepName": "[if(empty(trim(parameters('databaseSession'))), '.AzureSQLDatabase.Platform', '.AzureSQLDatabase.Session')]",
        "imageSku": "[if(equals(parameters('outsystemsEnvironmentPurpose'),'Development'), 'platformserver', 'lifetime')]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "pid-d6afbe29-a6dc-4149-863a-c2f7d985c159",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": []
                }
            }
        },
        {
            "name": "[concat('OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServer.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[parameters('sqlServerName')]"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLDatabase.Platform')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[trim(parameters('databasePlatform'))]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLDatabase.Session')]",
            "apiVersion": "2015-01-01",
            "condition": "[not(empty(trim(parameters('databaseSession'))))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[trim(parameters('databaseSession'))]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLDatabase.Log')]",
            "apiVersion": "2015-01-01",
            "condition": "[not(empty(trim(parameters('databaseLog'))))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerDatabase.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "databaseName": {
                        "value": "[trim(parameters('databaseLog'))]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer.NetworkRule')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/sqlServerVirtualNetworkRule.json')]"
                },
                "parameters": {
                    "serverName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')).outputs.serverName.value]"
                    },
                    "ruleName": {
                        "value": "AllowVNet"
                    },
                    "virtualNetworkSubnetId": {
                        "value": "[resourceId(parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('virtualNetworkSubnetName'))]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.DC.', parameters('controllerVirtualMachineName'), '.VirtualMachine')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/virtualMachinePrivate.json')]"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('controllerVirtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "imageSku": {
                        "value": "[variables('imageSku')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.FE.', parameters('frontendVirtualMachineName'), '.VirtualMachine')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/virtualMachinePrivate.json')]"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('frontendVirtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "imageSku": {
                        "value": "[variables('imageSku')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.DC.', parameters('controllerVirtualMachineName'), '.ControllerRole')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'outsystemsSetup/outsystemsConfig.json')]"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.VirtualMachine')).outputs.virtualMachineName.value]"
                    },
                    "DBServer": {
                        "value": "[concat(reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
                    },
                    "DBPlatform": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLDatabase.Platform')).outputs.databaseName.value]"
                    },
                    "DBSession": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), variables('sessionCatalogDepName'))).outputs.databaseName.value]"
                    },
                    "DBLogging": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), variables('logCatalogDepName'))).outputs.databaseName.value]"
                    },
                    "DBAdminUser": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "DBAdminPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSControllerIP": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.VirtualMachine')).outputs.virtualMachineIP.value]"
                    },
                    "OSControllerName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.VirtualMachine')).outputs.virtualMachineName.value]"
                    },
                    "OSPurpose": {
                        "value": "[parameters('outsystemsEnvironmentPurpose')]"
                    },
                    "_artifactsLocation": {
                        "value": "[deployment().properties.templateLink.uri]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.FE.', parameters('controllerVirtualMachineName'), '.FrontendRole')]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'outsystemsSetup/outsystemsConfig.json')]"
                },
                "parameters": {
                    "resourceName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.FE.', parameters('frontendVirtualMachineName'), '.VirtualMachine')).outputs.virtualMachineName.value]"
                    },
                    "DBServer": {
                        "value": "[concat(reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
                    },
                    "DBPlatform": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLDatabase.Platform')).outputs.databaseName.value]"
                    },
                    "DBSession": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), variables('sessionCatalogDepName'))).outputs.databaseName.value]"
                    },
                    "DBLogging": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), variables('logCatalogDepName'))).outputs.databaseName.value]"
                    },
                    "DBAdminUser": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "DBAdminPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "OSControllerIP": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.VirtualMachine')).outputs.virtualMachineIP.value]"
                    },
                    "OSControllerName": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.VirtualMachine')).outputs.virtualMachineName.value]"
                    },
                    "OSPurpose": {
                        "value": "N/A"
                    },
                    "OSRole": {
                        "value": "Frontend"
                    },
                    "OSPrivateKey": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.ControllerRole')).outputs.message.value]"
                    },
                    "_artifactsLocation": {
                        "value": "[deployment().properties.templateLink.uri]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "virtualMachineName": {
            "type": "string",
            "value": "[parameters('controllerVirtualMachineName')]"
        },
        "virtualMachineIP": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.VirtualMachine')).outputs.virtualMachineIP.value]"
        },
        "sqlServerNameFQDN": {
            "type": "string",
            "value": "[concat(reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.AzureSQLServer')).outputs.serverName.value, '.database.windows.net')]"
        },
        "sqlServerName": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'),'.AzureSQLServer')).outputs.serverName.value]"
        },
        "privateKey": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('controllerVirtualMachineName'), '.ControllerRole')).outputs.message.value]"
        }
    }
}